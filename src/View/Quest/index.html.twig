{% extends 'layout.html.twig' %}

{% block user_score %}
    Score : {{ userScore }}
{% endblock %}

{% block content %}
    <div class="container-quest">
        <h5>{{ quests.0.quest_title }}</h5>
        <div class="accordion" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne"
                                aria-expanded="true" aria-controls="collapseOne">
                            Indice #1
                        </button>
                    </h2>
                </div>

                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                     data-parent="#accordionExample">
                    <div class="card-body">
                        {{ quests.0.quest_clue01 }}
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Indice #2
                        </button>
                    </h2>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="card-body">
                        {{ quests.0.quest_clue02 }}
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingThree">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Indice #3
                        </button>
                    </h2>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                        {{ quests.0.quest_clue03 }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <form class="form-search-quest" method="POST">
        <div class="form-group search">
            <input type="text" class="form-control" id="search" name="search" placeholder="Recherche une ville">
        </div>
        <button type="submit" class="btn btn-search"><i class="fas fa-play" style="color: forestgreen;"></i></button>
    </form>
    {% if check is defined %}
        {% if check == true %}
            <span>Tu a la bonne reponse Bravo !!!</span>
        {% else %}
            <span>Tu a pas la bonne reponse recommence</span>
        {% endif %}
    {% endif %}

    {% if error is defined %}
        <div class="alert alert-danger" role="alert">
            {{ error }}
        </div>
    {% endif %}

    <form class="container-webcam" method="POST">
        {% for webcam in webcams %}
            <div class="webcam">
                <iframe src="{{ webcam.player.lifetime.embed }}" frameborder="0"></iframe>
                <input name="id" value="{{ quests.0.quest_id }}" type="hidden">
                <button type="submit" name="response" value="{{ webcam.id }}">Check</button>
            </div>
        {% endfor %}
    </form>


{% endblock %}
