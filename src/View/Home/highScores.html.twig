{% extends 'layout.html.twig' %}

{% block content %}
    {% set test = (allscore | last) %}

    <div class="table-container">
        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th scope="col">Rank</th>
                <th scope="col">Player</th>
                <th scope="col">High Scores</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                {% if loop.index < 11 or user.user_name == test.user_name %}
                <tr {% if user.user_name == test.user_name %}class="myscore"{% endif %}>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ user.user_name }}</td>
                    <td>{{ user.user_score }}</td>
                </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
